{% extends 'base.html.twig' %}

{% block title %}News {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for new in news %}
                    <div class="col">
                    <div class="card shadow-sm">
                        <img src="{{ new.picture }}" width="100%" height="225" class="bd-placeholder-img card-img-top"/>
                        <div class="card-body">
                            <a class="btn" href="{{ path('show', { id : new.id }) }}"><h4>{{ new.title }}</h4></a>
                            <p class="card-text">{{ new.short_description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('show', { id : new.id }) }}" type="button" class="btn btn-sm btn-outline-secondary">Read More...</a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('news-delete', { id : new.id }) }}" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
                                    {% endif %}


                                </div>
                                <small class="text-muted">{{ new.source }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="navigation pt-5">
                {{ knp_pagination_render(news) }}
            </div>
        </div>
    </div>
{% endblock %}
